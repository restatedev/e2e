<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="STDERR" target="SYSTEM_ERR">
            <PatternLayout pattern="%-4r [%t] %-5p %c %x - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="Info">
            <AppenderRef ref="STDERR"/>
        </Root>

        <Logger name="dev.restate.e2e.utils" level="DEBUG">
            <AppenderRef ref="STDERR"/>
        </Logger>
    </Loggers>
</Configuration>